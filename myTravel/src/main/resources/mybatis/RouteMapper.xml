<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kkb.my.travle.dao.RouteDao">

    <resultMap id="routeMap" type="Route">
        <id column="rid" property="rid"></id>
        <result column="rname" property="rname"></result>
        <result column="price" property="price"></result>
        <result column="routeIntroduce" property="routeIntroduce"></result>
        <result column="rflag" property="rflag"></result>
        <result column="rdate" property="rdate"></result>
        <result column="isThemeTour" property="isThemeTour"></result>
        <result column="count" property="count"></result>
        <result column="cid" property="cid"></result>
        <result column="rimage" property="rimage"></result>
        <result column="sid" property="sid"></result>
        <result column="sourceId" property="sourceId"></result>

        <association property="category" javaType="Category" select="com.kkb.my.travle.dao.CategoryDao.findById" column="cid">
            <id column="cid" property="cid"></id>
        </association>
        <association property="seller" javaType="Seller" select="com.kkb.my.travle.dao.SellerDao.findById" column="sid">
            <id column="sid" property="sid"></id>
        </association>
        <collection property="routeImgList" javaType="java.util.List" ofType="RouteImg" select="com.kkb.my.travle.dao.RouteImgDao.findByRid"
                    column="rid">
            <id column="rgid" property="rgid"></id>
        </collection>
    </resultMap>

    <sql id="baseSelect">select * from tab_route </sql>

    <select id="find" resultMap="routeMap">
        <include refid="baseSelect"></include>
        <where>
            <if test="cid!=null">
                and cid = #{cid}
            </if>
            <if test="sid!=null">
                and sid = #{sid}
            </if>
            <if test="rflag!=null">
                and rflag = #{rflag}
            </if>
            <if test="rname!=null and rname.trim()!=''">
                and rname like concat('%',concat(#{rname},'%'))
            </if>
            <if test="routeIntroduce!=null and routeIntroduce.trim!=''">
                and routeIntroduce like concat('%',#{routeIntroduce},'%')
            </if>
        </where>
    </select>
    <select id="findById" resultMap="routeMap">
        <include refid="baseSelect"></include>
        where rid = #{rid}
    </select>
</mapper>